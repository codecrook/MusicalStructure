<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/playlistItem_padding">

    <ImageView
        android:id="@+id/album_art_thumb"
        android:layout_width="@dimen/playlistItem_thumb_dimens"
        android:layout_height="@dimen/playlistItem_thumb_dimens"
        android:src="@drawable/discplayer" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/playlistItem_padding">

        <TextView
            android:layout_marginTop="@dimen/playlistItem_song_title_marginTop"
            android:id="@+id/song_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:text="Song Name"
            android:textColor="@color/black"
            android:textSize="@dimen/playlistItem_song_title_textSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Artist"
            android:textSize="@dimen/playlistItem_artist_name_textSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3.20" />
</LinearLayout>